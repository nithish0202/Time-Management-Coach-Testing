generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Task {
  id            String    @id @default(uuid())
  title         String
  created_at    DateTime  @default(now())
  due_date      DateTime?
  priority      String
  note          String?   @db.Text
  reason        String?
  status        String
  assigned_to   String
  priority_tags Json?
  userId        Int

  @@index([userId], map: "tasks_userId_fkey")
  @@map("tasks")
}

model Qtask {
  id            String   @id @default(uuid())
  date          DateTime
  workTasks     String
  personalTasks String
  notes         String
  timeSpent     String
  userId        Int

  @@index([userId], map: "qtasks_userId_fkey")
  @@map("qtasks")
}

model FocusSession {
  id             String   @id @default(uuid())
  startTime      DateTime
  endTime        DateTime
  timeSpent      Int
  completedTasks Json
  createdAt      DateTime @default(now())
  userId         Int
  taskChanges    Json?

  @@index([userId], map: "idx_focus_sessions_userId")
  @@map("focus_sessions")
}

model user {
  id      Int    @id @default(autoincrement())
  name    String
  email   String @unique(map: "User_email_key")
  picture String @db.LongText
}
