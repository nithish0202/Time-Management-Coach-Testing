generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id      Int      @id @default(autoincrement())
  name    String
  email   String   @unique
  picture String   @db.LongText
  tasks   Task[]
  qtasks  Qtask[]
  focusSessions FocusSession[]
}

model Task {
  id            String   @id @default(uuid())
  title         String
  created_at    DateTime @default(now())
  due_date      DateTime?
  priority      String
  note          String?
  reason        String?
  status        String
  assigned_to   String
  priority_tags Json?

  userId Int
  user   User @relation(fields: [userId], references: [id])

  @@map("tasks")
}

model Qtask {
  id            String   @id @default(uuid())
  date          DateTime
  workTasks     String
  personalTasks String
  assigned_by   String
  notes         String
  timeSpent     String

  userId Int
  user   User @relation(fields: [userId], references: [id])

  @@map("qtasks") // FIXED: lowercase to match MySQL naming convention
}

model FocusSession {
  id             String   @id @default(uuid())
  startTime      DateTime
  endTime        DateTime
  timeSpent      Int      // time spent in seconds
  completedTasks Json     // store array of completed task objects in JSON format

  createdAt      DateTime @default(now())
  userId         Int
  user           User     @relation(fields: [userId], references: [id])

  @@map("focus_sessions")
  @@index([userId])
}

